<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DegreeRequirementsActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generalRequirements"
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="128dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:text="General Requirements"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upperLevelConcentrationRequirements"
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Upper Level Concentration"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lowerLevelRequirements" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trackSpecificRequirements"
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Track Specific Requirements"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperLevelConcentrationRequirements" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lowerLevelRequirements"
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Lower Level Coursework Requirements"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generalRequirements" />

    <TextView
        android:id="@+id/degreeRequirementsTitle"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:text="Degree Requirements"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

